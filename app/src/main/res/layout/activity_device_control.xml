<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/drawerBackground"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lavender"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp" />

    <!-- Status Text -->
    <LinearLayout
        android:id="@+id/statusLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting for command..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Kontainer utama -->
    <FrameLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Switch Panel (Default view) -->
        <ScrollView
            android:id="@+id/switchScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/switchContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8dp">

                <!-- Switch 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSwitch1"
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:id="@+id/switch1Layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:gravity="bottom|center_horizontal"
                        android:background="@drawable/bg_switch_off"
                        android:padding="8dp">

                        <LinearLayout
                            android:id="@+id/layoutTx1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="top|center_horizontal"
                            android:layout_marginBottom="120dp"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/textSwitch1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Switch 1"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="?attr/textContent2"
                                android:tooltipText="Tekan untuk edit" />
                        </LinearLayout>

                        <View
                            android:id="@+id/indicator1"
                            android:layout_width="40dp"
                            android:layout_height="6dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/indicator_off" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Switch 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSwitch2"
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:id="@+id/switch2Layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:gravity="bottom|center_horizontal"
                        android:background="@drawable/bg_switch_off"
                        android:padding="8dp">

                        <LinearLayout
                            android:id="@+id/layoutTx2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="top|center_horizontal"
                            android:layout_marginBottom="120dp"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/textSwitch2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Switch 2"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="?attr/textContent2"
                                android:tooltipText="Tekan untuk edit" />
                        </LinearLayout>

                        <View
                            android:id="@+id/indicator2"
                            android:layout_width="40dp"
                            android:layout_height="6dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/indicator_off" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <!-- Custom Builder Layout (Hidden by default) -->
        <LinearLayout
            android:id="@+id/customBuilderLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Component Palette -->
            <LinearLayout
                android:id="@+id/componentPanel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#EEEEEE"
                android:padding="8dp" />

            <!-- Custom Area -->
            <FrameLayout
                android:id="@+id/customArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/grid_background" />
        </LinearLayout>



    </FrameLayout>
    <Button
        android:id="@+id/buttonShowTimeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Timeline"
        android:layout_margin="16dp"
        android:icon="@drawable/ic_timeline"
        android:iconTint="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:iconPadding="8dp"
        app:iconGravity="textStart" />

</LinearLayout>
