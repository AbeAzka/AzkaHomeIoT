<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/my_text_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tombol Untuk Pencatatan Performa Ibadah"
        android:textSize="12sp"
        android:padding="10dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/executeUrlButton3"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="+1"/>
        <Button
            android:id="@+id/executeUrlButton4"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="0.5"/>
        <Button
            android:id="@+id/executeUrlButton5"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="-0.5"/>
        <Button
            android:id="@+id/executeUrlButton6"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="-1"/>
        <WebView
            android:id="@+id/web_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/executeUrlButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akumulasi Performa"/>
    </LinearLayout>

    <TextView
        android:id="@+id/logTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grafik Performa Ibadah Selama 1 Minggu:"
        android:textSize="18sp"
        android:padding="16dp" />

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>