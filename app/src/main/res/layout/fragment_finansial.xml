        <Spinner
            android:id="@+id/mbuh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:popupBackground="?attr/cardBG"
            android:layout_marginBottom="16dp"
            android:entries="@array/boolean_options"
            app:entryValues="@array/boolean_options_values"

            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cards_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:visibility="gone"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            app:cardBackgroundColor="?attr/cardBG"
            app:cardElevation="4dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:padding="14dp"
                >

                <TextView
                    android:id="@+id/tx1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Bensin Xenia"
                    android:fontFamily="sans-serif"
                    android:textColor="?attr/textContent"

                    android:textSize="20dp"
                    />

                >


                <TextView
                    android:id="@+id/creditValueDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="?attr/textContent"
                    android:text="Credit Value: "
                    app:layout_constraintTop_toBottomOf="@id/tx1"
                    app:layout_constraintBottom_toTopOf="@id/divider"
                    android:textSize="18sp" />
                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/purple_500"
                    app:layout_constraintBottom_toTopOf="@id/creditInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/creditValueDisplay" />
                <EditText
                    android:id="@+id/creditInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Value"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintBottom_toTopOf="@id/inputDsc"/>
                <EditText
                    android:id="@+id/inputDsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"

                    app:layout_constraintTop_toBottomOf="@id/creditInput"
                    app:layout_constraintBottom_toTopOf="@id/tess"/>

                <LinearLayout

                    android:id="@+id/tess"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="vertical"

                    android:padding="14dp"
                    app:layout_constraintEnd_toStartOf="@id/tess2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inputDsc">


                    <Button
                        android:id="@+id/submitCredit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Credit" />


                </LinearLayout>

                <LinearLayout

                    android:id="@+id/tess2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="vertical"

                    android:padding="14dp"
                    app:layout_constraintStart_toEndOf="@id/tess"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inputDsc">



                    <Button
                        android:id="@+id/submitDebit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cards_info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:visibility="gone"
            android:layout_marginTop="100dp"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            app:cardBackgroundColor="?attr/cardBG"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:padding="14dp"
                >

                <TextView
                    android:id="@+id/tx12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Kebutuhan Alat Mandi"
                    android:fontFamily="sans-serif"
                    android:textColor="?attr/textContent"

                    android:textSize="20dp"
                    />

                >


                <TextView
                    android:id="@+id/creditValueDisplay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="?attr/textContent"
                    android:text="Credit Value: "
                    app:layout_constraintTop_toBottomOf="@id/tx12"
                    app:layout_constraintBottom_toTopOf="@id/divider2"
                    android:textSize="18sp" />
                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/purple_500"
                    app:layout_constraintBottom_toTopOf="@id/creditInput2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/creditValueDisplay2" />
                <EditText
                    android:id="@+id/creditInput2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Value"
                    app:layout_constraintTop_toBottomOf="@id/divider2"
                    app:layout_constraintBottom_toTopOf="@id/inputDsc2"/>
                <EditText
                    android:id="@+id/inputDsc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"

                    app:layout_constraintTop_toBottomOf="@id/creditInput2"
                    app:layout_constraintBottom_toTopOf="@id/tess22"/>

                <LinearLayout

                    android:id="@+id/tess22"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="vertical"

                    android:padding="14dp"
                    app:layout_constraintEnd_toStartOf="@id/tess23"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inputDsc2">


                    <Button
                        android:id="@+id/submitCredit2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Credit" />


                </LinearLayout>

                <LinearLayout

                    android:id="@+id/tess23"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="vertical"

                    android:padding="14dp"
                    app:layout_constraintStart_toEndOf="@id/tess22"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inputDsc2">



                    <Button
                        android:id="@+id/submitDebit2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cards_info3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:visibility="gone"
            android:layout_marginTop="100dp"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            app:cardBackgroundColor="?attr/cardBG"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:padding="14dp"
                >

                <TextView
                    android:id="@+id/tx13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Jajan Anak"
                    android:fontFamily="sans-serif"
                    android:textColor="?attr/textContent"

                    android:textSize="20dp"
                    />

                >


                <TextView
                    android:id="@+id/creditValueDisplay3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="?attr/textContent"
                    android:text="Credit Value: "
                    app:layout_constraintTop_toBottomOf="@id/tx13"
                    app:layout_constraintBottom_toTopOf="@id/divider3"
                    android:textSize="18sp" />
                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/purple_500"
                    app:layout_constraintBottom_toTopOf="@id/creditInput3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/creditValueDisplay3" />
                <EditText
                    android:id="@+id/creditInput3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Value"
                    app:layout_constraintTop_toBottomOf="@id/divider3"
                    app:layout_constraintBottom_toTopOf="@id/inputDsc3"/>
                <EditText
                    android:id="@+id/inputDsc3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"

                    app:layout_constraintTop_toBottomOf="@id/creditInput3"
                    app:layout_constraintBottom_toTopOf="@id/tess222"/>

                <LinearLayout

                    android:id="@+id/tess222"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="vertical"

                    android:padding="14dp"
                    app:layout_constraintEnd_toStartOf="@id/tess233"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inputDsc3">


                    <Button
                        android:id="@+id/submitCredit3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Credit" />


                </LinearLayout>

                <LinearLayout

                    android:id="@+id/tess233"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="vertical"

                    android:padding="14dp"
                    app:layout_constraintStart_toEndOf="@id/tess222"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inputDsc3">



                    <Button
                        android:id="@+id/submitDebit3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:id="@+id/pb_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/lavender"
            />
        <Button
            android:id="@+id/deleteData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete All Data"
            android:backgroundTint="@color/red"
            android:elevation="8dp"
        android:translationZ="4dp"
            android:layout_marginTop="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"/>
<!--            app:layout_constraintTop_toBottomOf="@id/cards_info2"-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>





