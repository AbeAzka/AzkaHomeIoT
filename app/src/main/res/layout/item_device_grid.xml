<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="?attr/cardBG"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <!-- Label Shared dan Category di satu baris -->
        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:gravity="end">

        <TextView
            android:id="@+id/tvShared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shared"
            android:textColor="@color/white"
            android:background="@drawable/bg_shared_label"
            android:padding="4dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:tooltipText="Device Category"

            android:textColor="@color/white"
            android:background="@drawable/bg_layout_category_item"
            android:padding="4dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

        <!-- Konten utama -->
        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/lay"
            android:minHeight="120dp"
            android:layout_marginTop="8dp">

            <!-- Nama perangkat -->
            <TextView
                android:id="@+id/textViewDeviceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Device Name"
                android:textColor="?attr/textContent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:singleLine="false"
                android:lines="1"
                android:tooltipText="Device Name"
                android:inputType="textMultiLine"
                android:breakStrategy="simple"
                android:hyphenationFrequency="normal" />

            <!-- Status dan IP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">
                <TextView
                    android:id="@+id/deviceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device: id"
                    android:tooltipText="Device ID"

                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="?attr/textContent"/>

                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offline"
                    android:textSize="12sp"
                    android:tooltipText="Device Status"

                    android:textColor="?attr/textContent"/>

                <TextView
                    android:id="@+id/textIP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0.0.0"
                    android:textSize="12sp"
                    android:tooltipText="Device IP Address"

                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Tombol aksi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnRename"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/green"
                    android:tooltipText="Edit"

                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"/>

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_trash_can"
                    app:tint="@color/red"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:tooltipText="Remove"
                    android:layout_marginStart="8dp"/>

                <ImageButton
                    android:id="@+id/btnInvite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/add_person_black"
                    app:tint="?attr/textContent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:tooltipText="Invite"
                    android:layout_marginStart="8dp"
                    android:visibility="visible"/>

                <ImageButton
                    android:id="@+id/btnRefresh"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_refresh"
                    app:tint="@color/cyan"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:tooltipText="Refresh"
                    android:layout_marginStart="8dp"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>