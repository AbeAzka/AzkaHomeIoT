<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="14dp"
            >

            <TextView
                android:id="@+id/tx12222"
                android:layout_width="200dp"
                android:layout_height="match_parent"

                android:layout_marginTop="10dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="@id/creditValueDisplay"
                android:background="@color/gray"
                android:fontFamily="sans-serif"
                android:textColor="?attr/textContent"
                app:layout_constraintStart_toStartOf="parent"

                android:textSize="20dp"
                />

            >


            <TextView
                android:id="@+id/creditValueDisplay2222"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="?attr/textContent"

                android:background="@color/gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tx12222"
                app:layout_constraintBottom_toTopOf="@id/divider2222"
                android:textSize="18sp" />
            <View
                android:id="@+id/divider2222"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/purple_500"
                app:layout_constraintBottom_toTopOf="@id/creditInput"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/creditValueDisplay2222" />
            <EditText
                android:id="@+id/creditInput2222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider2222"
                app:layout_constraintBottom_toTopOf="@id/inputDsc2222"/>
            <EditText
                android:id="@+id/inputDsc2222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/creditInput2222"
                app:layout_constraintBottom_toTopOf="@id/tess2222"/>

            <LinearLayout
android:layout_marginTop="10dp"
                android:id="@+id/tess2222"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@color/gray"

                android:gravity="center"
                android:orientation="vertical"

                android:padding="14dp"
                app:layout_constraintEnd_toStartOf="@id/tess233333333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputDsc2222">





            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/tess233333333"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/gray"

                android:padding="14dp"
                app:layout_constraintStart_toEndOf="@id/tess2222"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputDsc2222">





            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>