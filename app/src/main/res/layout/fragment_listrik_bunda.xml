<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".ListrikBundaFragment">

    <!-- Judul -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listrik Bunda"
        android:textColor="@color/cyan"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginBottom="8dp" />

    <!-- Deskripsi -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select button below to check status from Listrik Bunda"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />

    <!-- Tombol kiri dan kanan -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/status_btn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Status"
            android:textSize="20sp" />

        <Button
            android:id="@+id/graph_btn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Graph"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Gambar di bawah tombol -->
    <ImageView
        android:id="@+id/imgStats"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <!-- Status text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- WebView di bagian paling bawah (disembunyikan awalnya) -->
    <WebView
        android:id="@+id/myWeb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible"
        tools:visibility="invisible" />

</LinearLayout>
