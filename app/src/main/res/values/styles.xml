<?xml version="1.0" encoding="utf-8"?>
    <resources>
    <!-- Default style for AlertDialog -->
<style name="CustomAlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
    <item name="android:background">@android:color/white</item> <!-- Background color -->
    <item name="android:padding">16dp</item> <!-- Padding inside the dialog -->
    <item name="android:maxWidth">600dp</item> <!-- Limit max width to 600dp -->
</style>

    <!-- Dark mode specific style -->
<style name="CustomAlertDialogStyle.Night" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
<item name="android:background">@android:color/black</item> <!-- Dark background for night mode -->
<item name="android:padding">16dp</item>
<item name="android:maxWidth">600dp</item> <!-- Limit max width to 600dp -->
</style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

</style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <style name="SpinnerDropDownStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <!-- Untuk teks utama spinner -->
        <item name="spinnerTextColor">@color/white</item>

        <!-- Untuk teks di dropdown list -->
        <item name="spinnerDropdownTextColor">@color/white</item>
    </style>

    <style name="WhatsAppDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/bg_dialog_whatsapp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog</item>
    </style>
    <!--    Theme for alert dialog -->
    <style name="MaterialAlertDialog" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>
    <!-- themes.xml -->


    <!--    This is the theme which is being used in our floating window-->
    <style name="FloatingWindow" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!--window animation style-->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!--alert dialog theme-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

</resources>

